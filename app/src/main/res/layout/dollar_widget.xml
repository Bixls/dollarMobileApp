<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="@dimen/widget_margin" android:background="#4c000000"
    android:id="@+id/dollarWidget">

    <TextView android:id="@+id/appwidget_text" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" android:text="@string/appwidget_text"
        android:textColor="#ffffff" android:textSize="12sp" android:textStyle="bold"
        android:contentDescription="@string/appwidget_text" />

    <TextView
        android:id="@+id/Wfrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/appwidget_text"
        android:textColor="#ffffff"
        android:textSize="9sp"
        android:contentDescription="@string/appwidget_text"
        android:layout_above="@+id/appwidget_text"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/Wto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/appwidget_text"
        android:textColor="#ffffff"
        android:textSize="9sp"

        android:contentDescription="@string/appwidget_text"
        android:layout_below="@+id/appwidget_text"
        android:layout_centerHorizontal="true" />

</RelativeLayout>